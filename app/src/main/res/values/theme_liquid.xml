<resources>
    <style name="LiquidTheme" parent="AppTheme">
        <item name="themeCardview">@drawable/cardview_liquid</item>
        <item name="themeIcon">@drawable/ic_liquid_network_60</item>
        <item name="themeIconNoPadding">@drawable/ic_liquid_no_padding</item>

        <item name="colorAccent">@color/liquidDark</item>
        <item name="materialButton">@drawable/material_button_liquid</item>
        <item name="materialButtonKeyboard">@drawable/material_button_keyboard_liquid</item>
        <item name="materialButtonSelection">@drawable/material_button_selection_liquid</item>
        <item name="materialButtonBorder">@drawable/material_button_border_liquid</item>
        <item name="materialButtonBorderText">@color/liquidGradientLight</item>

        <item name="materialFeeButtonSelected">@drawable/fee_button_selected_liquid</item>
        <item name="materialFeeButtonUnSelected">@drawable/fee_button_unselected_liquid</item>

        <item name="qrBg">@drawable/ic_qr_bg_liquid</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/liquidDark</item>
        <item name="colorControlHighlight">@color/liquidDark</item>

        <item name="drawableSendReceiveIcColor">@android:color/white</item>
        <item name="sendReceiveBtnBg">@color/liquidButtonsBg</item>

        <item name="receiveIconArrow">@color/receiveArrowColor</item>
        <item name="receiveIconCircle">@color/receiveCircleColor</item>

    </style>
    <style name="LiquidTheme.NoActionBar" parent="LiquidTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimaryDark">@color/windowBackground</item>
    </style>
</resources>